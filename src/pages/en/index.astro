---
import Button from "../../components/Button";
import Cv from "../../components/icons/Cv.astro";
import Github from "../../components/icons/Github";
import Linkedin from "../../components/icons/Linkedin.astro";
import Mail from "../../components/icons/Mail.astro";
import Navbar from "../../components/Navbar";
import ProjectCard from "../../components/ProjectCard";
import TagWrapper from "../../components/TagWrapper";
import Timeline from "../../components/Timeline";
import Layout from "../../layouts/Layout.astro";

import { projects } from "../../data/projects";

import * as m from "../../paraglide/messages.js";
---

<Layout title="Franco Murabito's Portfolio">
  <header class="container">
    <Navbar client:load />
  </header>
  <main class="container px-4">
    <section
      class="min-h-dvh flex items-center justify-center flex-wrap pt-20 lg:pt-0"
    >
      <TagWrapper title="developer">
        <h1
          class="text-neutral-50 font-black text-7xl text-pretty max-w-[315px]"
        >
          Franco Murabito
        </h1>
      </TagWrapper>
      <picture class="size-[330px] lg:size-[450px] -rotate-2">
        <source srcset="/img/franco.avif" type="image/avif" />
        <img
          src="/img/franco.webp"
          alt="Franco Murabito"
          style="mask-image: radial-gradient(ellipse at top, black 50%, transparent 70%);"
        />
      </picture>
      <TagWrapper title="about-me" className="pt-14">
        <p class="text-neutral-50 text-balance max-w-[355px]">
          {m.heroDescription()}
        </p>
        <div class="flex justify-between gap-4 pt-4 pb-2">
          <a href="https://www.linkedin.com/in/franco-murabito/">
            <Button>
              <span>LinkedIn</span>
              <span><Linkedin /></span>
            </Button>
          </a>
          <a href="https://github.com/MurabitoF">
            <Button>
              <span>GitHub</span>
              <span><Github /></span>
            </Button>
          </a>
          <a href={m.cvButtonLink()} download>
            <Button>
              <span>{m.cvButton()}</span>
              <span><Cv /></span>
            </Button>
          </a>
        </div>
      </TagWrapper>
      <img
        src="/wave-1.svg"
        class="absolute top-[12%] lg:top-[5%] w-full -z-50"
        aria-hidden="true"
      />
    </section>
    <section id="experience" class="min-h-dvh flex items-center">
      <Timeline client:load />
      <img
        src="/wave-2.svg"
        class="absolute rotate-180 lg:bottom-[15%] left-0 w-full -z-50 opacity-50 brightness-105 bottom-[44%]"
        aria-hidden="true"
      />
    </section>
    <section id="projects" class="min-h-dvh flex justify-center items-center">
      <TagWrapper title="projects">
        <div class="grid grid-col-1 md:grid-cols-3 gap-x-4 gap-y-8 py-4">
          {projects.map((project) => <ProjectCard project={project} />)}
        </div>
        <p class="pt-8 pb-4 md:pb-0 text-2xl text-center text-neutral-100">
          {m.moreProjects()}
          <a
            href="https://github.com/MurabitoF"
            class="font-bold underline text-amber-400">GitHub</a
          >
        </p>
      </TagWrapper>
    </section>
    <section
      id="about-me"
      class="min-h-[25dvh] lg:flex lg:justify-between text-neutral-100 pb-8"
    >
      <TagWrapper title="about-me" className="max-w-prose">
        <p class="text-balance text-base whitespace-pre-line">
          {m.aboutMe1()}<strong class="text-amber-500">{m.aboutMe2()}</strong>{
            m.aboutMe3()
          }
        </p>
      </TagWrapper>
      <TagWrapper title="links" className="w-full lg:w-1/3">
        <div class="flex flex-col gap-4 py-2">
          <a href="https://github.com/MurabitoF" class="flex gap-2"
            ><Github /> Github
          </a>
          <a
            href="https://www.linkedin.com/in/franco-murabito/"
            class="flex gap-2"><Linkedin /> LinkedIn</a
          >
          <a href="mailto:francomurabito@outlook.com" class="flex gap-2"
            ><Mail /> {m.email()}</a
          >
          <a href={m.cvButtonLink()} download class="flex gap-2">
            <Cv />
            <span>{m.cvButton()}</span>
          </a>
        </div>
      </TagWrapper>
    </section>
  </main>
  <footer class="py-2 text-neutral-600 bg-[hsl(220,20%,5%)]">
    <p class="container px-4 lg:px-0">
      {
        `Â© ${new Date().getFullYear()} Franco Murabito. Todos los derechos reservados`
      }
    </p>
  </footer>
</Layout>
